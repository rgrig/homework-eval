<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">
  <display-name>HomeworkEval</display-name>
  <description>
    A simple homework evaluator for programming courses.
  </description>

  <servlet>
    <servlet-name>HomeworkEvalSrvImpl</servlet-name>
    <servlet-class>org.rgrig.server.HomeworkEvalSrvImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeworkEvalSrvImpl</servlet-name>
    <url-pattern>/homeworkevalapp/HomeworkEvalSrv</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>HomeworkEvalApp.html</welcome-file>
  </welcome-file-list>
</web-app>

