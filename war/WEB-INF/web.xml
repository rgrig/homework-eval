<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
    
<web-app>
  <display-name>HomeworkEval</display-name>
  <description>
    A simple homework evaluator for programming courses.
  </description>

  <servlet>
    <servlet-name>HomeworkEvalSrv</servlet-name>
    <servlet-class>org.rgrig.server.HomeworkEvalSrvImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeworkEvalSrv</servlet-name>
    <url-pattern>/homeworkevalapp/HomeworkEvalSrv</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>HomeworkEvalApp.html</welcome-file>
  </welcome-file-list>
</web-app>

